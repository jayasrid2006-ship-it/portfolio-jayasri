<!-- Scripts -->
<script>
  let cart = [];
  let cartTotal = 0;

  // Initialize with a welcome message
  document.addEventListener('DOMContentLoaded', function() {
    updateCartDisplay();
  });

  function addToCart(product, price) {
    cart.push({name: product, price: price});
    cartTotal += price;
    updateCartDisplay();
    
    // Show notification
    showNotification(`${product} added to cart!`);
  }

  function updateCartDisplay() {
    document.getElementById('cartCount').innerText = cart.length;
    document.getElementById('cartTotal').innerText = cartTotal;
    
    const cartItems = document.getElementById('cartItems');
    
    if (cart.length === 0) {
      cartItems.innerHTML = '<p class="text-muted text-center">Your cart is empty</p>';
      return;
    }
    
    let html = '';
    cart.forEach((item, index) => {
      html += `
        <div class="d-flex justify-content-between align-items-center mb-3 p-3 border rounded">
          <div>
            <h6 class="mb-0">${item.name}</h6>
            <small class="text-muted">â‚¹${item.price}</small>
          </div>
          <button class="btn btn-sm btn-outline-danger" onclick="removeFromCart(${index})">
            <i class="bi bi-trash"></i>
          </button>
        </div>
      `;
    });
    
    cartItems.innerHTML = html;
  }

  function removeFromCart(index) {
    cartTotal -= cart[index].price;
    cart.splice(index, 1);
    updateCartDisplay();
  }

  function clearCart() {
    cart = [];
    cartTotal = 0;
    updateCartDisplay();
    showNotification('Cart cleared!');
  }

  function placeOrder() {
    const name = document.getElementById('name').value.trim();
    const phone = document.getElementById('phone').value.trim();
    const address = document.getElementById('address').value.trim();

    if (cart.length === 0) {
      showNotification('Please add items to cart first!', 'error');
      return;
    }

    if (!name || !phone || !address) {
      showNotification('Please fill all delivery details!', 'error');
      return;
    }

    // Show order confirmation
    const orderId = 'ORD' + Math.floor(Math.random() * 1000000);
    showNotification(`Order placed successfully! Order ID: ${orderId}`, 'success');
    
    // Clear cart and form
    clearCart();
    document.getElementById('name').value = '';
    document.getElementById('phone').value = '';
    document.getElementById('address').value = '';
    
    // Add chatbot message
    addBotMessage(`Your order #${orderId} has been placed! You can track it using "Track order" in the chat. Estimated delivery: 3-5 days.`);
  }

  function showNotification(message, type = 'success') {
    // Create notification element
    const notification = document.createElement('div');
    notification.className = `alert alert-${type === 'error' ? 'danger' : 'success'} position-fixed`;
    notification.style.cssText = `
      top: 80px;
      right: 20px;
      z-index: 1100;
      min-width: 300px;
      animation: slideInRight 0.3s ease;
    `;
    notification.innerHTML = `
      <div class="d-flex align-items-center">
        <i class="bi ${type === 'error' ? 'bi-exclamation-triangle' : 'bi-check-circle'} me-2"></i>
        ${message}
      </div>
    `;
    
    document.body.appendChild(notification);
    
    // Remove after 3 seconds
    setTimeout(() => {
      notification.style.animation = 'slideOutRight 0.3s ease';
      setTimeout(() => notification.remove(), 300);
    }, 3000);
  }

  // Chatbot Functions
  function toggleChat() {
    const chat = document.getElementById('chatbot');
    const btn = document.getElementById('chatbotBtn');
    
    if (chat.style.display === 'block') {
      chat.style.display = 'none';
      btn.innerHTML = '<i class="bi bi-robot"></i>';
    } else {
      chat.style.display = 'block';
      btn.innerHTML = '<i class="bi bi-x-lg"></i>';
      document.getElementById('userInput').focus();
    }
  }

  function sendMessage() {
    const input = document.getElementById('userInput');
    const msg = input.value.trim();
    
    if (msg === '') return;
    
    addUserMessage(msg);
    input.value = '';
    
    setTimeout(() => processUserMessage(msg), 600);
  }

  function quickQuestion(question) {
    addUserMessage(question);
    setTimeout(() => processUserMessage(question), 600);
  }

  function handleKeyPress(event) {
    if (event.key === 'Enter') {
      sendMessage();
    }
  }

  function addUserMessage(text) {
    const div = document.createElement('div');
    div.className = 'user-msg animate__animated animate__fadeInUp';
    div.innerText = text;
    document.getElementById('chatMessages').appendChild(div);
    scrollChatToBottom();
  }

  function addBotMessage(text) {
    const div = document.createElement('div');
    div.className = 'bot-msg animate__animated animate__fadeInUp';
    div.innerText = text;
    document.getElementById('chatMessages').appendChild(div);
    scrollChatToBottom();
  }

  function scrollChatToBottom() {
    const chatBody = document.querySelector('.chat-body');
    chatBody.scrollTop = chatBody.scrollHeight;
  }

  function processUserMessage(msg) {
    msg = msg.toLowerCase();
    let reply = '';
    
    // AI Responses
    if (msg.includes('hello') || msg.includes('hi') || msg.includes('hey')) {
      reply = "Hello! ðŸ‘‹ How can I assist with your shopping today?";
    } else if (msg.includes('product') || msg.includes('item') || msg.includes('best product')) {
      reply = "Our best-selling products are:\n1. Wireless Headphones (â‚¹1999)\n2. Smart Watch Pro (â‚¹2999)\n3. Bluetooth Speaker (â‚¹1499)\n4. Gaming Mouse (â‚¹899)\n\nWhich one interests you?";
    } else if (msg.includes('price') || msg.includes('cost') || msg.includes('how much')) {
      reply = "All our products are competitively priced with regular discounts! For example:\n- Headphones: â‚¹1999 (was â‚¹2899)\n- Smart Watch: â‚¹2999 (was â‚¹3499)\n- Speaker: â‚¹1499 (was â‚¹1999)\n\nCheck the product cards for exact pricing.";
    } else if (msg.includes('offer') || msg.includes('discount') || msg.includes('deal')) {
      reply = "Current offers:\nâœ… 30% OFF on Wireless Headphones\nâœ… â‚¹500 OFF on Smart Watch\nâœ… Free shipping on orders above â‚¹3000\nâœ… Use code 'AI10' for extra 10% off!";
    } else if (msg.includes('order') && msg.includes('track')) {
      reply = "To track your order:\n1. Share your order ID\n2. Or check your email for tracking link\n3. You can also contact support at support@smartshopai.com\n\nYour estimated delivery time is 3-5 business days.";
    } else if (msg.includes('payment') || msg.includes('pay') || msg.includes('card')) {
      reply = "We accept:\nðŸ’³ Credit/Debit Cards\nðŸ¦ Net Banking\nðŸ“± UPI (Google Pay, PhonePe, Paytm)\nðŸ’° Cash on Delivery\nðŸ”’ All payments are secure and encrypted.";
    } else if (msg.includes('cart') || msg.includes('basket')) {
      const itemCount = cart.length;
      reply = `You have ${itemCount} item${itemCount !== 1 ? 's' : ''} in your cart. Total: â‚¹${cartTotal}. Click 'Place Order' to proceed with checkout.`;
    } else if (msg.includes('delivery') || msg.includes('shipping') || msg.includes('dispatch')) {
      reply = "Delivery information:\nðŸšš Free shipping on orders above â‚¹3000\nâ° Standard delivery: 3-5 business days\nâš¡ Express delivery: 1-2 days (extra â‚¹200)\nðŸ“¦ We ship all over India!";
    } else if (msg.includes('return') || msg.includes('refund') || msg.includes('exchange')) {
      reply = "Return policy:\nâœ… 10-day return window\nâœ… Items must be unused and in original packaging\nâœ… Refunds processed within 7 business days\nâœ… Contact support for return requests";
    } else if (msg.includes('thank')) {
      reply = "You're welcome! ðŸ˜Š Let me know if you need anything else. Happy shopping!";
    } else {
      reply = "I'm here to help with:\nâ€¢ Product information\nâ€¢ Pricing and offers\nâ€¢ Order tracking\nâ€¢ Payment methods\nâ€¢ Delivery details\n\nWhat would you like to know?";
    }
    
    addBotMessage(reply);
  }

  function showCart() {
    if (cart.length === 0) {
      showNotification('Your cart is empty!', 'error');
    } else {
      const cartSection = document.querySelector('.order-summary');
      cartSection.scrollIntoView({ behavior: 'smooth' });
      
      // Highlight the cart section
      cartSection.classList.add('animate__animated', 'animate__pulse');
      setTimeout(() => {
        cartSection.classList.remove('animate__animated', 'animate__pulse');
      }, 1000);
    }
  }
</script>

</body>
</html>